@model InAndOut.Models.Expense


<form method="post" asp-action="Create">
    
    <div class=" " border р-3">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="ExpenseName"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Amount"></label>
                    </div>
                    
                </div>
                <div class="form-group row">
                    <div class="col-6">
                       <input asp-for="ExpenseName" class="form-control" />
                       <span asp-validation-for="ExpenseName" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    
                </div>
            </div>
            <div class="col-6">
               <input type="submit" class="btn btn-info w-75" value="Create" />
            </div>
            <div class="col-6 ">
                <a class=" btn btn w-75" asp-area="" asp-controller="Expense" asp-action="Index">Go back</a>

            </div>
        </div>
    </div>



</form>

@section Scripts{
    @{<partial name="_ValidationScriptsPartial" />}
}

